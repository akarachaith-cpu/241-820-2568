<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
 
<body>
<input type="radio" name="gender" value="male" onchange="changGender()" checked="true"> Male
<input type="radio" name="gender" value="female" onchange="changeGender()"> Female
    <script >
        function changGender(){
            //เลือก เำืกำพ ททุก input ออกมา
            let gendersInputs = document.querySelectorAll('input[name="gender"]');

            //ใคร checked อยู่ = เพศโดนล็อกอยู่
            for(let i = 0; i < gendersInputs.length; i++) {
                if (gendersInputs[i].checked) {
                    console.log("Gender selected: " + gendersInputs[i].value)
                }
            }
        }
        
    </script>
</body>
</html>
